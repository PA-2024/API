@model API_GesSIgn.Models.Error

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Error</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Error_Funtion" class="control-label"></label>
                <input asp-for="Error_Funtion" class="form-control" />
                <span asp-validation-for="Error_Funtion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Error_DateTime" class="control-label"></label>
                <input asp-for="Error_DateTime" class="form-control" />
                <span asp-validation-for="Error_DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Error_Description" class="control-label"></label>
                <input asp-for="Error_Description" class="form-control" />
                <span asp-validation-for="Error_Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Error_Solved" /> @Html.DisplayNameFor(model => model.Error_Solved)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
